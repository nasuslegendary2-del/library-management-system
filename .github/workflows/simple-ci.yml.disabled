name: Simple CI/CD Pipeline

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  # Simple Build and Test
  test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: "18"

      - name: Install dependencies
        run: npm install

      - name: Run tests
        run: |
          echo "ðŸ§ª Running tests..."
          node test-ci.js
          echo "âœ… Tests completed"

  # Docker Build and Push (only on main branch)
  docker:
    needs: test
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main'

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      - name: Build and push backend
        run: |
          docker build -f Dockerfile.backend -t ${{ secrets.DOCKERHUB_USERNAME }}/lms-backend:latest .
          docker push ${{ secrets.DOCKERHUB_USERNAME }}/lms-backend:latest

      - name: Build and push frontend
        run: |
          docker build -f Dockerfile.frontend -t ${{ secrets.DOCKERHUB_USERNAME }}/lms-frontend:latest .
          docker push ${{ secrets.DOCKERHUB_USERNAME }}/lms-frontend:latest

      - name: Success
        run: |
          echo "ðŸŽ‰ Docker images built and pushed successfully!"
          echo "Backend: ${{ secrets.DOCKERHUB_USERNAME }}/lms-backend:latest"
          echo "Frontend: ${{ secrets.DOCKERHUB_USERNAME }}/lms-frontend:latest"
